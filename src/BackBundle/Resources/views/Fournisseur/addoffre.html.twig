<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
<i class="fa fa-plus"></i>  Ajouter offre
</button>

<!-- Modal -->
<div class="modal fade" id="myModal"  role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" id="close-up-add-modale" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Ajouter offre</h4>
      </div>
       {{ form_start(form, {'method': 'post', 'action': path('create_offre'), 'attr': {'id':'add-offre-form'}}) }}
      <div class="modal-body">
        
        <div class="row">
<div class="col-md-12">














       <div class="col-md-6 form-group">
                  <label for="username">Categorie :*</label>
                    <select class="form-control" id="categorie-select" name="categorie-select">
                    <option selected disabled>categorie</option>
                    {%for categorie in categories%}
                    <option value="{{categorie.id}}">{{categorie.titre}}</option>
                    {% endfor %}
                    </select>     
                    <span class="text-danger" id="data.categorie"></span>

                 
       </div> 


       <div class="col-md-6 form-group">
                  <label for="username">Produit :*</label>
                    <select class="form-control" id="produit-offre" name="produit-offre" >
                     <option selected >Choisir un type de produit </option>
                    </select>     
                    <span class="text-danger" id="data.produit"></span>

                 
       </div>


       


  
 <div class="col-md-12 form-group">
                  <label for="username">Titre:*</label>
                  {{form_widget(form.titre ,{'id':'titre-offre','attr':{'class': 'form-control','placeholder':'Titre'}})}}                 
                    <span class="text-danger" id="data.titre"></span>

                 
       </div>
     



  <div class="col-md-12 form-group">
                  <label for="username">Description :*</label>
                  {{form_widget(form.description ,{'id':'description-offre','attr':{'class': 'form-control','placeholder':'Description'}})}}                 
                    <span class="text-danger" id="data.description"></span>

                 
       </div>








 <div class="col-md-6 form-group">
                  <label for="username">Quantité (en kg)  :*</label>
                {{form_widget(form.quantite ,{'id':'quantite-offre','attr':{'class': 'form-control','placeholder':'Quantité'}})}}                  
                    <span class="text-danger" id="data.quantite"></span><br/>
                    <span class="text-danger" id="children[quantite]"></span>

                     

                 
       </div>


  
        

 



       <div class="col-md-6 form-group">
                  <label for="username">  Prix unitaire (En Dinar):*</label>
                {{form_widget(form.prix ,{'id':'prix-offre','attr':{'class': 'form-control','placeholder':'Prix'}})}}                  
                    <span class="text-danger" id="data.prix"></span><br/>
                    <span class="text-danger" id="children[prix]"></span>
                 
       </div>





  <div class="col-md-12 form-group">
                  <label for="username">Tiket (En kg) :*</label>
                  {{form_widget(form.tiket ,{'id':'tiket-offre','attr':{'class': 'form-control'}})}}                 
                    <span class="text-danger" id="data.tiket"></span><br/>
                    <span class="text-danger" id="children[tiket]"></span>
                     
                 
       </div>











 <div class="col-md-12 form-group">
                  <label for="username">Image d&apos;offre :</label>
                  {{form_widget(form.image ,{'id':'image-offre','attr':{'class': 'form-control','placeholder':'Image offre'}})}}                 
                    <span class="text-danger" id="data.image"></span>

                 
       </div> 





































</div>
</div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" id="close-modale-add">Close</button>
        <button type="submit" class="btn btn-primary" id="btn-add-offre"> <span>Enregistrer</span><i id="spin-add-offre"></i></button>
      </div>
      {{ form_end(form) }}
    </div>
  </div>
</div>













