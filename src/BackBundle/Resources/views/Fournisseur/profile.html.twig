           if(email!==""&&username!==""&&responsable!==""&&fonction!==""&&ville!==""&&adresse!==""&&cp!==""&&telephone!=="")

             {
                      $.ajax({
                       dataType:"json",
                       url:$("#edit_fournisseur").attr('action'),
                       type:$("#edit_fournisseur").attr('method'),
                        data:new FormData(formfournisseur),
                       contentType:false,
                       processData:false,
                       cache:false,
                       success:function (data,status,object)
                       {

                      
                       var message=data.message;
                       if(data.success==true)
                          {


                         
                               errorFournisseurArray.forEach(function(error){
                                  if($.trim(document.getElementById(error).textContent) !== "")

                                  {
                                    document.getElementById(error).textContent="";
                                  }
