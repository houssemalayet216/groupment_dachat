         {% if listeprodsCatgories is defined and   listeProduitsCat!=null  %}

             
                
                


          <div class="row">

            
            
             {% for listprod in listeprodsCatgories %}


            <div class="col-12 col-sm-6 col-lg-4"  style="margin-top:50px;">
             
             
             <div class="productCard " data-productid="{{listprod.id}}">
    <div class="productCard-imageWrapper"> 
     <a title="Nectarine blanche" href="{{path('produit_detailles',{'id':listprod.id})}}" class="b-lazy productCard-image product-link-detail-target b-loaded" style="background-image: url(&quot;{{asset('')}}uploads/logo/{{listprod.image}}&quot;);"></a>
         </div>
          <div class="productCard-details"> 
            <div class="productCard-actionWrapper"> 
              <div class="productCard-price"> {{listprod.prix}} </div> 
              <div class="addToCart" > 
                <button id="btn-ajouter-item" class="btn btn-ajouter-panier btn-green addFirstItem" data-productid="{{listprod.id}}" data-type-of-list="section_homepage_1" >Ajouter</button> </div> </div>  <div class="kl productCard-producer" > 

                <div class="producer-img-wrapper">
                {% if listprod.user.logo  %}
                 <img src="{{asset('')}}uploads/logo/{{listprod.user.logo}}"  alt="User Image">
                 {%else%}
                 <img src="{{asset('uploads/telechargement.jpg')}}"  alt="User Image">
                 {%endif%} 

                 </div> <div class="producer-name" >{{listprod.user.responsable}}</div> </div> <div class="productCard-main"> <a class="productCard-name product-link-detail-target" href="{{path('produit_detailles',{'id':listprod.id})}}"> {{listprod.titre}} </a> <div class="productCard-price"> {{listprod.prix}} DT</div> </div> <div class="productCard-stats"> <div>Tiket {{listprod.tiket}} Kg</div> <div>{{listprod.tiket * listprod.prix  }} DT/Tiket</div> </div> </div> </div>



            </div>


            {%endfor%}
         

           

          </div>

          <!-- Pagination -->
          <div class="text-center">
            <div >{{ knp_pagination_render(listeprodsCatgories) }}</div>
          </div>
          
          </div>

          {% endif %}

