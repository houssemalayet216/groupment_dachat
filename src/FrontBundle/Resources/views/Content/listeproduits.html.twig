                 {%endif%} 

                 </div> <div class="producer-name" >{{list.user.responsable}}</div> </div> <div class="productCard-main"> <a class="productCard-name product-link-detail-target" href="{{path('produit_detailles',{'id':list.id})}}"> {{list.titre}} </a> <div class="productCard-price"> {{list.prix}} DT</div> </div> <div class="productCard-stats"> <div>Tiket {{list.tiket}} Kg</div> <div>{{list.tiket * list.prix  }} DT/Tiket</div> </div> </div> </div>



