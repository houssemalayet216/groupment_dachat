             <div class="productCard " data-productid="{{list.id}}">
    <div class="productCard-imageWrapper"> 
     <a title="Nectarine blanche" href="{{path('produit_detailles',{'id':list.id})}}" class="b-lazy productCard-image product-link-detail-target b-loaded" style="background-image: url(&quot;{{asset('')}}uploads/logo/{{list.image}}&quot;);"></a>
         </div>
          <div class="productCard-details"> 
            <div class="productCard-actionWrapper"> 
              <div class="productCard-price"> {{list.prix}} </div> 
